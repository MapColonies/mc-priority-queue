{
  "name": "@map-colonies/mc-priority-queue",
  "version": "4.1.0",
  "description": "This package handles tasks consuming from jobs manager",
  "main": "./dist/index.js",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/mc-priority-queue.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/mc-priority-queue/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/MapColonies/mc-priority-queue#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@map-colonies/eslint-config": "^3.1.1",
    "@map-colonies/prettier-config": "0.0.1",
    "@map-colonies/standard-version-update-helm-version": "^2.0.1",
    "@map-colonies/standard-version-update-openapi3-version": "0.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.15.1",
    "commitlint": "^17.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.22.0",
    "husky": "^4.3.8",
    "jest": "^28.1.0",
    "jest-create-mock-instance": "2.0.0",
    "jest-html-reporters": "^3.0.8",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "standard-version": "^9.3.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^9.1.1",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "@map-colonies/js-logger": "^0.0.5",
    "@map-colonies/mc-utils": "^1.8.1"
  }
}
