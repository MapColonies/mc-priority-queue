{
  "compilerOptions": {
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"],
}
